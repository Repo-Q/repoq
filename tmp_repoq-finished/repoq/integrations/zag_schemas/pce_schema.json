{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PCE Schema",
  "type": "object",
  "required": [
    "claim",
    "problem",
    "normal_form",
    "existence_conditions",
    "witness",
    "value_bound"
  ],
  "properties": {
    "claim": {
      "type": "string"
    },
    "problem": {
      "type": "object",
      "required": [
        "kind"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "game",
            "ot",
            "variational"
          ]
        }
      }
    },
    "normal_form": {
      "type": "object",
      "additionalProperties": true
    },
    "existence_conditions": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "witness": {
      "type": "object",
      "additionalProperties": true
    },
    "value_bound": {
      "type": "object",
      "required": [
        "Q_or_cost",
        "tau"
      ],
      "properties": {
        "Q_or_cost": {
          "type": "number"
        },
        "tau": {
          "type": "number"
        }
      }
    }
  }
}
