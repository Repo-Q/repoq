{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PCQ Schema",
  "type": "object",
  "required": [
    "U",
    "aggregator",
    "tau",
    "support"
  ],
  "properties": {
    "U": {
      "type": "string",
      "description": "Quantale carrier, e.g. [0,1]"
    },
    "aggregator": {
      "type": "string",
      "enum": [
        "min",
        "max",
        "sum",
        "custom"
      ]
    },
    "tau": {
      "type": "number"
    },
    "support": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "weight",
          "metrics"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "weight": {
            "type": "number",
            "minimum": 0
          },
          "metrics": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          }
        }
      }
    },
    "risk": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "CVaR",
            "DRO",
            "None"
          ]
        },
        "alpha": {
          "type": "number"
        },
        "epsilon": {
          "type": "number"
        }
      }
    }
  }
}
