{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ZAG Release Manifest Schema",
  "type": "object",
  "required": [
    "model",
    "version",
    "date",
    "pcq",
    "pce",
    "fairness_cover",
    "ahr",
    "options"
  ],
  "properties": {
    "model": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "date": {
      "type": "string"
    },
    "pcq": {
      "type": "string",
      "description": "path to PCQ JSON"
    },
    "pce": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "paths to PCE JSONs"
    },
    "fairness_cover": {
      "type": "object",
      "required": [
        "nodes",
        "edges",
        "boundary",
        "budget"
      ],
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "u",
              "v",
              "weight"
            ],
            "properties": {
              "u": {
                "type": "string"
              },
              "v": {
                "type": "string"
              },
              "weight": {
                "type": "number",
                "minimum": 0
              }
            }
          }
        },
        "boundary": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "budget": {
          "type": "number",
          "description": "max acceptable min-cut value (fairness cost budget)"
        }
      }
    },
    "ahr": {
      "type": "object",
      "required": [
        "tau",
        "baselineQ",
        "updates"
      ],
      "properties": {
        "tau": {
          "type": "number"
        },
        "baselineQ": {
          "type": "number"
        },
        "updates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "t",
              "Q_robust"
            ],
            "properties": {
              "t": {
                "type": "number"
              },
              "Q_robust": {
                "type": "number"
              },
              "delta": {
                "type": "number"
              },
              "fairness_cycle": {
                "type": "number"
              },
              "pcq_support_k": {
                "type": "integer"
              },
              "FQ": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "zk": {
          "type": "boolean"
        },
        "kmax": {
          "type": "integer",
          "default": 8
        }
      }
    }
  }
}
